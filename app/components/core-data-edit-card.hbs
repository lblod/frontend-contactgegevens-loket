<EditCard @containsRequiredFields={{true}}>
  <:title>{{yield to="title"}}</:title>
  <:card as |Card|>
    <Card.Columns>
      <:left as |Item|>
        <Item
          @labelFor={{concat @id "-name"}}
          @errorMessage={{@adminUnit.error.name.validation}}
        >
          <:label>Naam</:label>
          <:content as |hasError|>
            <TrimInput
              @width="block"
              @id={{concat @id "-name"}}
              @error={{hasError}}
              @value={{@adminUnit.name}}
              @onUpdate={{fn (mut @adminUnit.name)}}
              @disabled={{contains @disabledIds "name"}}
            ></TrimInput>
          </:content>
        </Item>
        <Item
          @labelFor={{concat @id "-adminType"}}
          @errorMessage={{@adminUnit.error.classification}}
        >
          <:label>Type bestuur</:label>
          <:content as |hasError|>
            <div class={{if hasError "ember-power-select--error"}}>
              <PowerSelect
                @allowClear={{false}}
                @options={{this.selectAdminTypeOptions}}
                @renderInPlace={{false}}
                @onChange={{fn (mut @adminUnit.classification.label)}}
                @searchEnabled={{false}}
                @selected={{@adminUnit.classification.label}}
                @error={{hasError}}
                @disabled={{contains @disabledIds "adminType"}}
                id={{concat @id "-adminType"}}
                as |adminType|>
                  {{adminType}}
              </PowerSelect>
            </div>
          </:content>
        </Item>
        <Item
          @labelFor="region"
          {{!-- @errorMessage={{@coreData.error.region.validation}} --}}
        >
          <:label>Regio</:label>
          <:content as |hasError|>
            <div class={{if hasError "ember-power-select--error"}}>
              {{!-- <PowerSelect
                  @allowClear={{false}}
                  @options={{this.selectRegionOptions}}
                  @renderInPlace={{false}}
                  @onChange={{fn (mut @coreData.region)}}
                  @searchEnabled={{false}}
                  @selected={{@coreData.region}}
                  @error={{hasError}}
                  @disabled={{contains @disabledIds "region"}}
                  id={{concat @id "-region"}}
                  as |region|>
                  {{region}}
              </PowerSelect> --}}
              TODO when model data is expanded
            </div>
          </:content>
        </Item>
      </:left>
      <:right as |Item|>
        <Item
          @labelFor={{concat @id "-status"}}
          @errorMessage={{@adminUnit.error.organizationStatus.validation}}
        >
          <:label>Status</:label>
          <:content as |hasError|>
            <div class={{if hasError "ember-power-select--error"}}>
              <PowerSelect
                  @allowClear={{false}}
                  @options={{this.selectStatusOptions}}
                  @renderInPlace={{false}}
                  @onChange={{fn (mut @adminUnit.organizationStatus.label)}}
                  @searchEnabled={{false}}
                  @selected={{@adminUnit.organizationStatus.label}}
                  @error={{hasError}}
                  @disabled={{contains @disabledIds "status"}}
                  id={{concat @id "-status"}}
                  as |status|>
                    {{status}}
              </PowerSelect>
            </div>
          </:content>
        </Item>
        <Item
          @labelFor={{concat @id "-kbo"}}
          @errorMessage={{@kbo.error.localId.validation}}
        >
          <:label>KBO nummer</:label>
          <:content as |hasError|>
          {{!-- Careful! Regex of validation checks the UNMASKED value which will be saved to the database! Which is intentional. --}}
            <TrimInput
              @width="block"
              @id={{concat @id "-kbo"}}
              @error={{hasError}}
              @value={{@kbo.localId}}
              @onUpdate={{fn (mut @kbo.localId)}}
              @mask="9999.999.999"
              @maskPlaceholder="____.___.___"
              @maskOptions={{hash autoUnmask=true}}
              @disabled={{or (not @kbo) (contains @disabledIds "kbo")}}
            ></TrimInput>
          </:content>
        </Item>
        <Item
          @labelFor={{concat @id "-nis"}}
          @errorMessage={{@nis.error.localId.validation}}
        >
          <:label>NIS code</:label>
          <:content as |hasError|>
            <TrimInput
              @width="block"
              @id={{concat @id "-nis"}}
              @error={{hasError}}
              @value={{@nis.localId}}
              @onUpdate={{fn (mut @nis.localId)}}
              @disabled={{or (not @nis) (contains @disabledIds "nis")}}
            ></TrimInput>
          </:content>
        </Item>
        <Item
          @labelFor={{concat @id "-ovo"}}
          @errorMessage={{@ovo.error.localId.validation}}
        >
          <:label>OVO nummer</:label>
          <:content as |hasError|>
            <TrimInput
              @width="block"
              @id={{concat @id "-ovo"}}
              @error={{hasError}}
              @value={{@ovo.localId}}
              @onUpdate={{fn (mut @ovo.localId)}}
              @mask="OVO999999"
              @maskPlaceholder="OVO______"
              @maskOptions="{{hash autoUnmask=true}}"
              @disabled={{or (not @ovo) (contains @disabledIds "ovo")}}
            ></TrimInput>
          </:content>
        </Item>
      </:right>
    </Card.Columns>
  </:card>
</EditCard>