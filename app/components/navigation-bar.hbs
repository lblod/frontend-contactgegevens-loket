<AuToolbar @border="bottom" @size="small" @skin="tint">
    <nav aria-label="breadcrumbs">
      <ol class="au-c-list-horizontal au-c-list-horizontal--breadcrumbs">
        <li class="au-c-list-horizontal__item">
          <AuLinkExternal href="https://loket.lokaalbestuur.vlaanderen.be/" @icon="arrow-left" @iconAlignment="left">
            Loket voor Lokale Besturen
          </AuLinkExternal>
        </li>
        <li class="au-c-list-horizontal__item">
          Contactinformatie en vestigingen
        </li>
        {{#each (breadcrumbs) as |breadcrumb|}}
          <li class="au-c-list-horizontal__item">
            {{#if (is-last breadcrumb (breadcrumbs))}}
              {{breadcrumb.title}}
            {{else}}
              <AuLink
                @route={{breadcrumb.data.route}}
                @model={{breadcrumb.data.model}}
                @models={{breadcrumb.data.models}}
              >
                {{breadcrumb.title}}
              </AuLink>
            {{/if}}
          </li>
        {{/each}}
      </ol>
    </nav>

</AuToolbar>