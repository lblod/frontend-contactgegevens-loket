<AuMainHeader
  @brandLink="https://www.vlaanderen.be/nl"
  @homeRoute="index"
  @appTitle={{config "appName"}}
>

  <li class="au-c-list-horizontal__item">
    <AuLinkExternal
      href="https://abb-vlaanderen.gitbook.io/handleiding-contact-en-organisatiegegevens/"
      @skin="secondary"
    >
      <AuIcon @icon="question-circle" @alignment="left" />
      Help
    </AuLinkExternal>
  </li>
  <li class="au-c-list-horizontal__item">
    {{#if this.session.isAuthenticated}}
      <AuDropdown
        @title={{concat
          this.currentSession.fullName
          " - "
          this.currentSession.groupClassification.label
          " "
          this.currentSession.group.name
        }}
        @buttonLabel="Account settings"
        @alignment="right"
        role="menu"
      >

        {{#unless this.session.isControllerLoginSession}}
          <AuLink @route="auth.switch" @icon="switch" role="menuitem">
            Wissel van bestuurseenheid
          </AuLink>
        {{/unless}}

        <AuLink @route="auth.logout" @icon="logout" role="menuitem">
          Afmelden
        </AuLink>
      </AuDropdown>
    {{else}}
      <LoginButton @isCompact={{true}} />
    {{/if}}
  </li>

</AuMainHeader>



