<div class={{if @error "ember-power-select--error"}}>
  <PowerSelect
    @allowClear={{true}}
    @loadingMessage="Aan het laden..."
    @options={{this.siteTypes}}
    @selected={{@selected}}
    @error={{@error}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    @disabled={{@disabled}}
    as |siteType|
  >
    {{siteType.label}}
  </PowerSelect>
</div>