@prefix form: <http://lblod.data.gift/vocabularies/forms/> .
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix mu: <http://mu.semte.ch/vocabularies/core/> .
@prefix fieldGroups: <http://data.lblod.info/field-groups/> .
@prefix fields: <http://data.lblod.info/fields/> .
@prefix displayTypes: <http://lblod.data.gift/display-types/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix ext: <http://mu.semte.ch/vocabularies/ext/> .
@prefix lblodBesluit: <http://lblod.data.gift/vocabularies/besluit/>.
@prefix schema: <http://schema.org/>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix nie: <http://www.semanticdesktop.org/ontologies/2007/01/19/nie#>.

##########################################################
# form
##########################################################
ext:mainFg a form:FieldGroup.

ext:form a form:Form;
    form:hasFieldGroup ext:mainFg.

##########################################################
#  property-group
##########################################################
ext:mainPropertyGroup a form:PropertyGroup;
    sh:description "All fields partaining to dummy";
    sh:name "Main" ;
    sh:order 1 .

##########################################################
#  input fields A and B
##########################################################
ext:inputFieldAttributeA a form:Field ;
    sh:name "Attribute A input" ;
    sh:order 220 ;
    sh:path ext:inputValueA ;
    form:options """{}""" ;
    form:displayType displayTypes:defaultInput ;
    form:validations
        [ a form:RequiredConstraint ;
            form:grouping form:Bag ;
            sh:resultMessage "Dit veld is verplicht." ;
            sh:path ext:inputValueA
        ] ;
    sh:group ext:mainPropertyGroup .

ext:mainFg form:hasField ext:inputFieldAttributeA .

ext:inputFieldAttributeB a form:Field ;
    sh:name "Attribute B input" ;
    sh:order 221 ;
    sh:path ext:inputValueB ;
    form:options """{}""" ;
    form:displayType displayTypes:defaultInput ;
    form:validations
        [ a form:RequiredConstraint ;
            form:grouping form:Bag ;
            sh:resultMessage "Dit veld is verplicht." ;
            sh:path ext:inputValueB
        ] ;
    sh:group ext:mainPropertyGroup .

ext:mainFg form:hasField ext:inputFieldAttributeB .

##########################################################
#  Pok√©mon combo box
##########################################################

ext:pokemonComboField a form:Field ;
    sh:name "Pokemon multi select" ;
    sh:order 222 ;
    sh:path ext:pokemonValue ;
    form:options """{"conceptScheme":"http://dennisvaneecke/concept-schemes/pokemons", "orderBy":"http://purl.org/linked-data/cube#order"}""" ;
    form:displayType displayTypes:conceptSchemeSelector ;
    sh:group ext:mainPropertyGroup .

ext:mainFg form:hasField ext:pokemonComboField .
